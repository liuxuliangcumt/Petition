<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.RegisterActivity">

    <include layout="@layout/activitytitle_common" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:focusableInTouchMode="false"
            android:orientation="vertical"
            android:paddingLeft="33dp"
            android:paddingRight="33dp"
            android:paddingTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="姓名"
                android:textColor="@color/c6d6d6d"
                android:textSize="16sp" />

            <com.realpower.petition.views.ClearEditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入您的姓名"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="身份证号"
                android:textColor="@color/c6d6d6d"
                android:textSize="16sp" />

            <com.realpower.petition.views.ClearEditText
                android:id="@+id/et_idcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入您的身份证号"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="手机号码"
                android:textColor="@color/c6d6d6d"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/et_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="请输入您的手机号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btn_code"
                    android:layout_width="112dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/colorPrimary"
                    android:text="发送验证码"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="输入验证码"
                android:textColor="@color/c6d6d6d"
                android:textSize="16sp" />

            <com.realpower.petition.views.ClearEditText
                android:id="@+id/et_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入验证码"
                android:inputType="number"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="输入密码"
                android:textColor="@color/c6d6d6d"
                android:textSize="16sp" />

            <com.realpower.petition.views.PassWordEditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请设置6-20位密码"
                android:inputType="textPassword"
                android:maxLength="20"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="重复密码"
                android:textColor="@color/c6d6d6d"
                android:textSize="16sp" />

            <com.realpower.petition.views.PassWordEditText
                android:id="@+id/et_passwordRp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请重复密码"
                android:inputType="textPassword"
                android:maxLength="20"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="所在地区"
                android:textColor="@color/c6d6d6d"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableRight="@drawable/arrow_bottom"
                android:gravity="center_vertical"
                android:hint="请选择"
                android:textSize="15sp"
                android:theme="@style/MyEdittext" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="详细地址"
                android:textColor="@color/c6d6d6d"
                android:textSize="16sp" />

            <com.realpower.petition.views.ClearEditText
                android:id="@+id/et_addressDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入详细地址" />

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="45dp"
                android:layout_marginTop="60dp"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
