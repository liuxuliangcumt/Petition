<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.realpower.petition.activity.ResetInfoActivity">

    <include layout="@layout/activitytitle_common" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/cf5f5f5"
                android:paddingLeft="20dp"
                android:paddingTop="12dp"
                android:text="基本信息"
                android:textColor="@color/cb3b3b3"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:text="头像"
                    android:textColor="@color/bigTextColor"
                    android:textSize="@dimen/normalTextSize" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/normalTextColor"
                    android:textSize="@dimen/normalTextSize" />

                <ImageView
                    android:id="@+id/iv_head"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/icon_user" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/more_icon" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/cebebeb" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textColor="@color/bigTextColor"
                    android:textSize="@dimen/normalTextSize" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/normalTextColor"
                    android:textSize="@dimen/normalTextSize" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/cebebeb" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:text="性别"
                    android:textColor="@color/bigTextColor"
                    android:textSize="@dimen/normalTextSize" />

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/normalTextColor"
                    android:textSize="@dimen/normalTextSize" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/cebebeb" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:text="手机号"
                    android:textColor="@color/bigTextColor"
                    android:textSize="@dimen/normalTextSize" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/normalTextColor"
                    android:textSize="@dimen/normalTextSize" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/cebebeb" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:text="身份证号"
                    android:textColor="@color/bigTextColor"
                    android:textSize="@dimen/normalTextSize" />

                <TextView
                    android:id="@+id/tv_idcard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/normalTextColor"
                    android:textSize="@dimen/normalTextSize" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/cebebeb"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:text="户籍地"
                    android:textColor="@color/bigTextColor"
                    android:textSize="@dimen/normalTextSize" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/normalTextColor"
                    android:textSize="@dimen/normalTextSize" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/cf5f5f5"
                android:paddingLeft="20dp"
                android:paddingTop="12dp"
                android:text="更多补充信息"
                android:textColor="@color/cb3b3b3"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:text="民族"
                    android:textColor="@color/bigTextColor"
                    android:textSize="@dimen/normalTextSize" />

                <com.realpower.petition.views.ClearEditText
                    android:id="@+id/et_nation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/normalTextColor"
                    android:textSize="@dimen/normalTextSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:text="职业"
                    android:textColor="@color/bigTextColor"
                    android:textSize="@dimen/normalTextSize" />

                <com.realpower.petition.views.ClearEditText
                    android:id="@+id/et_job"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/normalTextColor"
                    android:textSize="@dimen/normalTextSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:text="工作单位"
                    android:textColor="@color/bigTextColor"
                    android:textSize="@dimen/normalTextSize" />

                <com.realpower.petition.views.ClearEditText
                    android:id="@+id/et_workplace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/normalTextColor"
                    android:textSize="@dimen/normalTextSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:text="固定电话"
                    android:textColor="@color/bigTextColor"
                    android:textSize="@dimen/normalTextSize" />

                <com.realpower.petition.views.ClearEditText
                    android:id="@+id/et_tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/normalTextColor"
                    android:textSize="@dimen/normalTextSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:text="通讯地址"
                    android:textColor="@color/bigTextColor"
                    android:textSize="@dimen/normalTextSize" />

                <com.realpower.petition.views.ClearEditText
                    android:id="@+id/et_postaladdress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/normalTextColor"
                    android:textSize="@dimen/normalTextSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:text="邮政编码"
                    android:textColor="@color/bigTextColor"
                    android:textSize="@dimen/normalTextSize" />

                <com.realpower.petition.views.ClearEditText
                    android:id="@+id/et_postalcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/normalTextColor"
                    android:textSize="@dimen/normalTextSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:text="电子邮箱"
                    android:textColor="@color/bigTextColor"
                    android:textSize="@dimen/normalTextSize" />

                <com.realpower.petition.views.ClearEditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/normalTextColor"
                    android:textSize="@dimen/normalTextSize" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="33dp"
                android:layout_marginTop="33dp"
                android:background="@drawable/bg_login_btn"
                android:text="保存"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
