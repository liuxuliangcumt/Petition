<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here.   android:Theme.NoTitleBar  -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorControlNormal">@color/textColorHint2</item>
        <item name="colorControlActivated">@color/colorButtonNormal</item>
        <item name="colorControlHighlight">@color/c303F9F</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="colorButtonNormal">@color/colorButtonNormal</item>
        <item name="android:buttonTint">@color/colorButtonNormal</item>
        <item name="android:buttonStyle">@style/MyButton</item>
    </style>

    <style name="MyGrayButton" parent="LoginTheme">
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/textColorHint2</item>
    </style>

    <style name="MyButten_Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:padding">@dimen/default_divider_height</item>
        <item name="contentInsetStart">0dp</item>
    </style>


    <style name="MyEdittext" parent="Base.Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/textColorHint</item>
        <item name="colorControlNormal">@color/textColorHint2</item>
        <item name="android:textSize">@dimen/normalTextSize</item>
        <item name="android:textColor">@color/normalTextColor</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="customDialog" parent="@android:style/Theme.Dialog">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/ctouming</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style>

    <style name="DialogBottom" parent="@android:style/Theme.Dialog">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/ctouming</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style>


    <style name="LoginTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="LoginTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="actionBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/primary_text_light</item>
        <item name="actionBarSize">25dp</item>
    </style>

    <style name="customTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionBarTheme">@style/actionBarTheme</item>
        <item name="colorPrimary">#FFA500</item>
        <item name="actionBarSize">25dp</item>
        <item name="colorPrimaryDark">#CCa500</item>
    </style>

    <style name="TabLayoutTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="MyButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/bg_login_btn</item>
        <item name="android:tint">@color/ce59c0e</item>
    </style>

</resources>
